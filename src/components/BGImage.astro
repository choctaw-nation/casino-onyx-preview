---
import type { ImageMetadata } from "astro";
import { Picture } from "astro:assets";

export interface Props {
	src: ImageMetadata;
	loading?: "eager" | "lazy";
}
const { src, loading } = Astro.props;
---

<Picture
	src={src}
	formats={["webp"]}
	alt=""
	class="position-absolute w-100 h-100 top-0 z-n1 object-fit-cover left-0"
	aria-hidden="true"
	loading={loading || "lazy"}
/>
